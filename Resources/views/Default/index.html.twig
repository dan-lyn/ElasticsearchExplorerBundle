{% extends 'DanLynElasticsearchExplorerBundle:Default:layout.html.twig' %}

{% block title 'ElasticsearchExplorer' %}

{% block content %}
    {% for index in indexes %}
        <div class="row">
            <div class="large-6 columns">
                <a href="{{ path('dan_lyn_elasticsearch_explorer_search_index', {searchindex: index.name}) }}">
                    <h2>{{ index.name }}</h2>
                </a>
                <table>
                    <tr>
                        <td><strong>{% trans %}Total docs{% endtrans %}</strong></td>
                        <td>{{ index.total_docs }}</td>
                    </tr>
                    <tr>
                        <td><strong>{% trans %}Total size{% endtrans %}</strong></td>
                        <td>{{ index.total_size }}</td>
                    </tr>
                </table>
            </div>
        </div>
    {% endfor %}
{% endblock %}
