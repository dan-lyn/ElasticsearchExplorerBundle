{% extends 'DanLynElasticsearchExplorerBundle:Default:layout.html.twig' %}

{% block title 'ElasticsearchExplorer: Search' %}

{% block content %}

{% if indexes %}
<form>
    <div>
        <div class="col-sm-12">
            <label>{% trans %}Select index{% endtrans %}:
                <select id="search-select-index">
                    <option value="-1">...</option>
                {% for index in indexes %}
                    <option value="{{ index.name }}"{% if searchindex==index.name %} selected{% endif %}>{{ index.name }}</option>
                {% endfor %}
                </select>
            </label>
        </div>
    </div>

    <div class="{% if searchindex == false %}invisible{% endif %}">
        <div class="col-sm-12">
            <label>{% trans %}Select type{% endtrans %}:
                <select id="search-select-type">
                    <option value="-1">...</option>
                {% for type in types %}
                    <option value="{{ type.name }}"{% if searchtype==type.name %} selected{% endif %}>{{ type.name }}</option>
                {% endfor %}
                </select>
            </label>
        </div>
    </div>

    <div class="{% if searchtype == false %} invisible{% endif %}">
        <div class="col-sm-12">
            <label>{% trans %}Search in field{% endtrans %}: 
                <a href="#" data-reveal-id="modalFields"><span class="fi-info"></span></a>
                <select class="searchfield" name="searchfield[]" multiple="multiple" required>
                    {% for field in fields %}
                    <option value="{{ field.name }}"{% if field.name in searchfield %} selected{% endif %}>{{ field.name }}</option>
                    {% endfor %}
                </select>
            </label>

            <div id="modalFields" class="reveal-modal" data-reveal>
                <h5>Fields</h5>
                <table>
                    <thead>
                        <tr>
                            <th><strong>{% trans %}Name{% endtrans %}</strong></th>
                            <th><strong>{% trans %}Type{% endtrans %}</strong></th>
                            <th>{% trans %}Index{% endtrans %}</th>
                        </tr>
                    </thead>
                    {% for field in fields %}
                    <tr>
                        <td>{{ field.name }}</td>
                        <td>{{ field.type }}</td>
                        <td>{{ field.index }}</td>
                    </tr>
                    {% endfor %}
                </table>
                <a class="close-reveal-modal">&#215;</a>
            </div>
        </div>
    </div>

    <div class="{% if searchtype == false %} invisible{% endif %}">
        <div class="col-sm-12">
            <label>{% trans %}Search for{% endtrans %}:
                <input name="searchterm" type="text" value="{% if searchterm %}{{ searchterm }}{% endif %}" required />
            </label>
        </div>
    </div>

    <div class="{% if searchtype == false %} invisible{% endif %}">
        <div class="col-sm-12">
            <input class="button" type="submit" value="{% trans %}Start search{% endtrans %}!" />
        </div>
    </div>
</form>
{% endif %}

{% if results %}
    {% for result in results %}
    <div class="search-row">
        <div class="col-sm-12">
            <table class="table">
            {% for resultSourceKey,resultSource in result._source %}
                <tr>
                    <td><strong>{{ resultSourceKey }}</strong></td>
                    <td>{{ resultSource }}</td>
                </tr>
            {% endfor %}
            </table>
        </div>
    </div>
    {% endfor %}
{% endif %}

{% endblock %}
