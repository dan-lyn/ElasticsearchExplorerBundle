{% extends 'DanLynElasticsearchExplorerBundle:Default:layout.html.twig' %}

{% block title 'ElasticsearchExplorer: Search' %}

{% block content %}

{% if indexes %}
<form>
    <div class="row">
        <div class="large-12 columns">
            <label>Select index:
                <select id="search-select-index">
                    <option value="-1">...</option>
                {% for index in indexes %}
                    <option value="{{ index.name }}"{% if searchindex==index.name %} selected{% endif %}>{{ index.name }}</option>
                {% endfor %}
                </select>
            </label>
        </div>
    </div>

    <div class="row{% if searchindex == false %} invisible{% endif %}">
        <div class="large-12 columns">
            <label>Select type:
                <select id="search-select-type">
                    <option value="-1">...</option>
                {% for type in types %}
                    <option value="{{ type.name }}"{% if searchtype==type.name %} selected{% endif %}>{{ type.name }}</option>
                {% endfor %}
                </select>
            </label>
        </div>
    </div>

    <div class="row{% if searchtype == false %} invisible{% endif %}">
        <div class="large-6 columns">
            <label>Search for:
                <input name="searchterm" type="text" value="{% if searchterm %}{{ searchterm }}{% endif %}" />
            </label>
        </div>
        <div class="large-6 columns">
            <label>Search in field:
                <select name="searchfield">
                    {% for field in fields %}
                    <option value="{{ field.name }}">{{ field.name }}</option>
                    {% endfor %}
                </select>
            </label>
        </div>
    </div>

    <div class="row{% if searchtype == false %} invisible{% endif %}">
        <div class="large-12 columns">
            <input class="button" type="submit" value="Start search!" />
        </div>
    </div>
</form>
{% endif %}

{% if results %}
    {% for result in results %}
    <div class="row">
       <div class="large-12 columns">
       {{ dump(result._source) }} 
       </div>
    </div>
    {% endfor %}
{% endif %}

{% endblock %}
